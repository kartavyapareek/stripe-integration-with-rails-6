<div class='row'>
  <div class='col-md-12'>
    <div class='row text-center'>
      <div class='col-md-12'>
        Payment  
      </div>
      </br></br></br>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <% if @subscription.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@subscription.errors.count, "error") %> prohibited
              this subscription from being saved:
            </h2>
            <ul>
              <% @subscription.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-2'></div>
      <div class='col-md-8'>
        <%= form_with model: @subscription, local: true do |form| %>
          <table class="table text-center">
            <tr>
              <th>Subscription Type</th>
              <th>Code</th>
              <th>Duration( in months )</th>
              <th>Price</th>
            </tr>
              <tr>
                <td>
                  <%= @subscription_type.title %>
                </td>
                <td>
                  <%= @subscription_type.code %>
                </td>
                <td>
                  <%= @subscription_type.duration %>
                </td>
                <td>
                  <%= @subscription_type.price %>
                </td>
              </tr>
            <tr>
              <td colspan='4' class='text-center'><%= form.submit "Pay Now" %></td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class='col-md-2'></div>
    </div>
  </div>
</div>
